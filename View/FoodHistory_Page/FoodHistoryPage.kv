<FoodHistoryPage>

    MDCard:
        size_hint: None, None
        size: 150, 50
        pos_hint: {'x': 0.04, 'top':0.96}

        MDLabel:
            text: "Food History"
            bold: True
            font_size: 20
            halign: 'left'
            padding_y: 5

    MDCard:
        id: card_foodHistory
        size_hint: None, None
        size: 400, 300
        pos_hint: {'x': 0.04, 'top':0.8}
        elevation: 1
        padding: 10
        spacing: 10
        orientation: 'vertical'

        ScrollView:
            size: 400, 350
            pos_hint: {'center_x': 0.5}


            GridLayout:
                id: food_history
                size_hint_y: None
                height: self.minimum_height
                width: 400
                cols: 1
                spacing: 10, 10
                padding: 10, 10

    MDCard:
        id: card_intakeHistory
        size_hint: None, None
        size: 300, 150
        pos_hint: {'x': 0.6, 'top':0.8}
        elevation: 1
        padding: 10
        spacing: 10
        orientation: 'vertical'

        MDLabel:
            text: "Food History Information"
        
        MDLabel:
            id: history_date
            text: "Date Saved: "
        
        MDLabel:
            id: history_intake
            text: "Total Intake: "
        


    # Back for the MDCard
    MDRectangleFlatIconButton:
        text: "Return"
        icon: "keyboard-return"
        text_color: "red"
        icon_color: "red"
        pos_hint: {"x": 0.43, "top": 0.14}
        on_release:
            app.root.generateFoodHistoryPageScreen()


    MDRectangleFlatIconButton:
        on_release:
            app.root.current = "Homepage"