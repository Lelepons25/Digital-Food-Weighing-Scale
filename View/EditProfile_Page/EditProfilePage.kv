<EditProfilePage>
    name: "EditProfilePage"

    user_name: user_name
    sex: sex
    age: age
    user_weight: user_weight
    user_height: user_height
    track_goal: track_goal
    bmi: bmi
    activity_level: activity_level
    goal_intake: goal_intake


    # Profile
    MDCard:
        size_hint: None, None
        size: 300, 350
        pos_hint: {'x': 0.04, 'top':0.88}
        elevation: 1
        padding: 10
        spacing: 10
        orientation: 'vertical'
        
        MDLabel:
            text: "Profile"
            bold: True
            font_size: 20
            halign: 'center'
            size_hint_y: None
            height: self.texture_size[1]
            padding_y: 5

        MDLabel:
            id: user_name
            text: "Name:"
            size_hint_x: None
            font_size: 14
            pos_hint: {"x": 0.07}

        MDLabel:
            id: sex
            text: "Sex:"
            size_hint_x: None
            font_size: 14
            pos_hint: {"x": 0.07}

        MDLabel:
            id: age
            text: "Age:"
            size_hint_x: None
            font_size: 14
            pos_hint: {"x": 0.07}

        MDLabel:
            id: user_weight
            text: "Weight:"
            size_hint_x: 30
            font_size: 14
            pos_hint: {"x": 0.07}
        
        MDLabel:
            id: user_height
            text: "Height:"
            size_hint_x: 30
            font_size: 14
            pos_hint: {"x": 0.07}
        
        MDLabel:
            id: track_goal
            text: "Track:"
            size_hint_x: 30
            font_size: 14
            pos_hint: {"x": 0.07}
        
        MDLabel:
            id: activity_level
            text: "Activity Level:"
            size_hint_x: 30
            font_size: 14
            pos_hint: {"x": 0.07}
        
        MDLabel:
            id: bmi
            text: "BMI:"
            size_hint_x: 30
            font_size: 14
            pos_hint: {"x": 0.07}
    
        
        MDLabel:
            id: goal_intake
            text: "Goal Intake:"
            size_hint_x: 30
            font_size: 14
            pos_hint: {"x": 0.07}

        MDRoundFlatButton:
            text: "Edit"
            font_size: 12
            pos_hint: {"center_x": 0.5}
            on_release:
                app.root.generateProfilePageScreen()

        Widget:
            size_hint_y: None
            height: 10

    # Meal Plan
    MDCard:
        id: card_mealPlan
        size_hint: None, None
        size: 400, 350
        pos_hint: {'x': 0.45, 'top':0.88}
        elevation: 1
        padding: 10
        spacing: 10
        orientation: 'vertical'


        MDLabel:
            id: mp_title
            text: "Meal Plans"
            font_size: 20
            halign: 'center'
            size_hint_y: None
            height: self.texture_size[1]
            padding_y: 5
        

        MDRectangleFlatButton:
            id: pinggang_pinoy
            size_hint: (1 , 0.3)
            pos_hint: {'center_x':0.5 , 'center_y':0.3}
            text: 'Pinggang Pinoy'
            text_color: "black"
            line_color: "red"
            on_release:
                root.enter_pinggangPinoy()
        
        MDRectangleFlatButton:
            id: food_exchange
            size_hint: (1 , 0.3)
            pos_hint: {'center_x':0.5 , 'center_y':0.3}
            text: 'Food Exchange List'
            text_color: "black"
            line_color: "red"
            on_release:
                root.enter_foodExchange()
        
        MDRectangleFlatButton:
            id: user_foodHistory
            size_hint: (1 , 0.3)
            pos_hint: {'center_x':0.5 , 'center_y':0.3}
            text: 'Food History'
            text_color: "black"
            line_color: "red"
            on_release:
                root.enter_userFoodHistory()
        
            ##################################################################        
        MDCarousel:
            # List or Card of Meal Plans
            id: carousel

        ScrollView:
            size: 400, 350
            pos_hint: {'center_x': 0.5}


            GridLayout:
                id: food_history
                size_hint_y: None
                height: self.minimum_height
                width: 400
                cols: 1
                spacing: 10, 10
                padding: 10, 10
 
    # Back for the MDCard
    MDRectangleFlatIconButton:
        text: "Return"
        icon: "keyboard-return"
        text_color: "red"
        icon_color: "red"
        pos_hint: {"x": 0.83, "top": 0.13}
        on_release:
            app.root.generateEditProfilePageScreen()

    # Return to Homepage
    MDRectangleFlatIconButton:
        on_release:
            app.root.generateHomePageScreen()


