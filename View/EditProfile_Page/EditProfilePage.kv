<EditProfilePage>
    name: "EditProfilePage"

    user_name: user_name
    sex: sex
    age: age
    user_weight: user_weight
    user_height: user_height
    track_goal: track_goal
    bmi: bmi


    # Profile
    MDCard:
        size_hint: None, None
        size: 300, 350
        pos_hint: {'x': 0.04, 'top':0.88}
        elevation: 1
        padding: 10
        spacing: 10
        orientation: 'vertical'
        
        MDLabel:
            text: "Profile"
            bold: True
            font_size: 20
            halign: 'center'
            size_hint_y: None
            height: self.texture_size[1]
            padding_y: 5

        MDLabel:
            id: user_name
            text: "Name:"
            size_hint_x: None
            font_size: 14
            pos_hint: {"x": 0.07}

        MDLabel:
            id: sex
            text: "Sex:"
            size_hint_x: None
            font_size: 14
            pos_hint: {"x": 0.07}

        MDLabel:
            id: age
            text: "Age:"
            size_hint_x: None
            font_size: 14
            pos_hint: {"x": 0.07}

        MDLabel:
            id: user_weight
            text: "Weight:"
            size_hint_x: 30
            font_size: 14
            pos_hint: {"x": 0.07}
        
        MDLabel:
            id: user_height
            text: "Height:"
            size_hint_x: 30
            font_size: 14
            pos_hint: {"x": 0.07}
        
        MDLabel:
            id: track_goal
            text: "Track:"
            size_hint_x: 30
            font_size: 14
            pos_hint: {"x": 0.07}
        
        MDLabel:
            id: bmi
            text: "BMI:"
            size_hint_x: 30
            font_size: 14
            pos_hint: {"x": 0.07}
        
        MDRoundFlatButton:
            text: "Edit"
            font_size: 12
            pos_hint: {"center_x": 0.5}
            on_release:
                root.enter_editButton()

        Widget:
            size_hint_y: None
            height: 10

    # Meal Plan
    MDCard:
        size_hint: None, None
        size: 400, 350
        pos_hint: {'x': 0.45, 'top':0.88}
        elevation: 1
        padding: 10
        spacing: 10
        orientation: 'vertical'

        MDLabel:
            text: "Meal Plans"
            font_size: 20
            halign: 'center'
            size_hint_y: None
            height: self.texture_size[1]
            padding_y: 5

########################################################################        
        MDCarousel:
            # List or Card of Meal Plans
            id: carousel

            MDCard:
                size_hint: None, None
                size: 350, 250
                pos_hint: {'center_x': 0.5, 'top':0.96}
                padding: 5
                spacing: 5
                elevation: 1
                orientation: 'vertical'

                MDLabel:
                    text: "Day 1"
                    font_size: 14
                    halign: 'center'
                    size_hint_y: None
                    height: self.texture_size[1]
                    padding_y: 5
            
            MDCard:
                size_hint: None, None
                size: 350, 250
                pos_hint: {'center_x': 0.5, 'top':0.96}
                padding: 5
                spacing: 5
                elevation: 1
                orientation: 'vertical'

                MDLabel:
                    text: "Day 1"
                    font_size: 14
                    halign: 'center'
                    size_hint_y: None
                    height: self.texture_size[1]
                    padding_y: 5
            


    # Return
    MDRectangleFlatIconButton:
        on_release:
            app.root.current = "Homepage"
            # root.manager.transition.direction = "right"

<display_mealPlan>
    MDCard:
        id: card
        size_hint: None, None
        size: 150, 150
        pos_hint: {'x': 0.32, 'top':0.96}
        padding: 5
        spacing: 5
        orientation: 'vertical'
