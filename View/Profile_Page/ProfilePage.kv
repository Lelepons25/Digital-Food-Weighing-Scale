<ProfilePage>
    name: "ProfilePage"

    user_name: user_name
    sex: sex
    age: age
    user_weight: user_weight
    user_height: user_height
    track_goal: track_goal
    activity_level: activity_level

    MDCard:
        size_hint: None, None
        size: 330, 400
        pos_hint: {'center_x': 0.5, 'center_y':0.5}
        elevation: 2
        padding: 5
        spacing: 5
        orientation: 'vertical'
        md_bg_color:utils.get_color_from_hex('#CCF5E9')
        
        MDLabel:
            text: "Profile"
            bold: True
            font_size: 20
            halign: 'center'
            size_hint_y: None
            height: self.texture_size[1]
            padding_y: 5

        # NAME
        MDTextField:
            id: user_name
            mode: "rectangle"         
            hint_text: "Name"
            size_hint_x: None
            width: 200
            height: 50
            font_size: 14
            pos_hint: {"center_x": 0.5}

        # SEX
        Spinner:
            id: sex
            text: "Sex"
            values: ["Male", "Female"]
            size_hint_x: None
            width: 200
            # font_size: 14
            pos_hint: {"center_x": 0.5}

            on_text:
                root.get_sex_spinner(sex.text)

        # AGE
        MDTextField:
            mode: "rectangle"
            id: age
            hint_text: "Age"
            size_hint_x: None
            width: 200
            font_size: 14
            pos_hint: {"center_x": 0.5}

        # WEIGHT
        MDTextField:
            mode: "rectangle"
            id: user_weight
            hint_text: "Weight(kg)"
            size_hint_x: None
            size: 200, 50
            font_size: 14
            pos_hint: {"center_x": 0.5}
        
        # HEIGHT
        MDTextField:
            mode: "rectangle"
            id: user_height
            hint_text: "Height(cm)"
            size_hint_x: None
            width: 200
            font_size: 14
            pos_hint: {"center_x": 0.5}

        # CALORIE or LOW CARB
        Spinner:
            id: track_goal
            text: "Which do you wanna track?"
            values: ["Calories", "Carbohydrates"]
            size_hint_x: None
            size: 200, 50
            # font_size: 14
            pos_hint: {"center_x": 0.5}

            on_text: root.get_trackgoal_spinner(track_goal.text)

        Spinner:
            id: activity_level
            text: "Your physical activity level"
            values: ["Sedentary", "Lightly active", "Moderately active", "Very active", "Extra active"]
            size_hint_x: None
            size: 200, 50
            pos_hint: {"center_x": 0.5}
            on_text: root.get_activitylevel_spinner(activity_level.text)


        # SAVE
        MDRoundFlatButton:
            text: "Save"
            font_size: 12
            pos_hint: {"center_x": 0.5}
            on_release:
                root.saveProfile()
        


        Widget:
            size_hint_y: None
            height: 3
        
    # CANCEL    
    MDRoundFlatButton:
        text: "Cancel"
        font_size: 12
        pos_hint: {"center_x": 0.94, "top": 0.98}
        on_release:
            root.cancel_profile()