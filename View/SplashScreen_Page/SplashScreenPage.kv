<SplashScreenPage>
    name: "SplashScreenPage"

    on_enter: self.ids.progress.start()

    FloatLayout:

        Image:
            source: 'icons/food.gif'
            allow_stretch: True
            anim_delay: 0
            anim_reset: True
        
        BoxLayout:
            pos_hint: {'center_y': .3, 'center_x': .5}
            padding: "10dp"
            size_hint_x: .7

            MDProgressBar:
                id: progress
                orientation: "horizontal"
                type: "indeterminate"
                running_duration: 1
                catching_duration: 1