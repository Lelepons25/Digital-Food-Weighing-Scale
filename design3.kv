        Widget:
            size_hint_y: None
            height: 10

<Homepage>
    name: "Homepage"

    MDCard:
        size_hint: None, None
        size: 150, 80
        pos_hint: {'x': 0.32, 'top':0.96}
        padding: 5
        spacing: 5
        orientation: 'vertical'

        Button:
            id: clear
            size_hint: (0.7, 0.7)
            pos_hint: {'center_x':0.5 , 'center_y':0.5}
            text: 'clear'
        
        Button:
            id: tare
            size_hint: (0.7,0.7)
            pos_hint: {'center_x':0.5 , 'center_y':0.5}
            text: 'tare'
        
    MDCard:
        
        size_hint: None, None
        size: 150, 80
        pos_hint: {'x': 0.48, 'top':0.96}
        padding: 5
        spacing: 5
        orientation: 'vertical'

        Button:
            id: save
            size_hint: (0.7,0.7)
            pos_hint: {'center_x':0.5 , 'center_y':0.5}
            text: 'save'
        

    
    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height
        

        # Display Weight
        TextInput:
            id: weight_input
            text: "0"
            font_size: 40
            size_hint: (0.3, 0.3)
            pos_hint:{'x':0.02}
            spacing: 10
            padding: 10
                
        
        GridLayout:
            cols: 3
            rows: 2

            spacing: 10
            padding: 10

            #Row
            Button:
                size_hint: (.2, .2)
                background_color: 1,0,0,1
                text: "Fruits"
                on_release:
                    app.root.current = "FruitsPage"
                    root.manager.transition.direction = "left"
            
            Button:
                size_hint: (.2, .2)
                background_color: 1,0,0,1
                text: "Vegetables"
                on_release:
                    app.root.current = "VegetablesPage"
                    root.manager.transition.direction = "left"
            
            Button:
                size_hint: (.2, .2)
                background_color: 1,0,0,1
                text: "Grains"
                on_release:
                    app.root.current = "GrainsPage"
                    root.manager.transition.direction = "left"
            
            Button:
                size_hint: (.2, .2)
                background_color: 1,0,0,1
                text: "Protein"
                on_release:
                    app.root.current = "ProteinPage"
                    root.manager.transition.direction = "left"
            
            Button:
                size_hint: (.2, .2)
                background_color: 1,0,0,1
                text: "Dairy"
                on_release:
                    app.root.current = "DairyPage"
                    root.manager.transition.direction = "left"
            
            Button:
                size_hint: (.2, .2)
                background_color: 1,0,0,1
                text: "More"
                on_release:
                    app.root.current = "MorePage"
                    root.manager.transition.direction = "left"
    

              
<FruitsPage>
    name: "FruitsPage"

    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height

        TextInput:
            id: weight_input
            text: "0"
